<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "<%= metadata.url + page.url %>"
  },
  "headline": "<%= title %>",
  "author": {
    "@type": "Person",
    "name": "<%= metadata.author.name %>"
  },
  "datePublished": "<%= page.date %>",
  "dateModified": "<%= lastUpdated %>"
}
</script>
